# Atlas Red Teaming Harness Configuration
# Copy this file to .env and fill in your values

# ==============================================================================
# OpenAI API Configuration
# ==============================================================================

# Your OpenAI API key (required)
# Get yours at: https://platform.openai.com/api-keys
# IMPORTANT: Use a burner account / test API key, not production!
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI API base URL (usually don't need to change)
OPENAI_API_BASE=https://api.openai.com/v1

# ==============================================================================
# Atlas Browser Configuration
# ==============================================================================

# Path to Atlas browser executable (macOS)
# Leave empty to use regular Chromium for testing
# Example: /Applications/Atlas.app/Contents/MacOS/Atlas
ATLAS_BROWSER_PATH=

# Testing mode: 'browser' for Atlas testing, 'api' for API-only testing
# Use 'api' mode if you don't have access to Atlas browser
TESTING_MODE=browser

# ==============================================================================
# Model Configuration
# ==============================================================================

# Model to test (for API mode or Atlas backend)
ATLAS_MODEL=gpt-4

# Maximum tokens in response
ATLAS_MAX_TOKENS=4096

# Temperature for responses (0.0 = deterministic, 1.0 = creative)
ATLAS_TEMPERATURE=0.7

# Request timeout in seconds
TIMEOUT_SECONDS=60

# ==============================================================================
# Rate Limiting
# ==============================================================================

# Requests per minute (respect API quotas)
REQUESTS_PER_MINUTE=20

# Maximum concurrent requests (keep low to avoid rate limits)
MAX_CONCURRENT_REQUESTS=5

# ==============================================================================
# Browser Automation Settings
# ==============================================================================

# Run browser in headless mode (no visible window)
HEADLESS_MODE=false

# Slow down browser operations (milliseconds) - useful for debugging
BROWSER_SLOW_MO=100

# Take screenshots after each interaction
SCREENSHOT_ON_INTERACTION=true

# Record video of browser sessions
RECORD_BROWSER_VIDEO=false

# ==============================================================================
# Test Server Configuration
# ==============================================================================

# Local server for hosting test pages
TEST_SERVER_HOST=127.0.0.1
TEST_SERVER_PORT=8888

# ==============================================================================
# Attack Configuration
# ==============================================================================

# Enable multi-turn attack sequences
ENABLE_MULTI_TURN=true

# Maximum conversation turns per attack
MAX_CONVERSATION_TURNS=10

# Test Agent Mode features (if available in Atlas)
TEST_AGENT_MODE=true

# Test browser memory features
TEST_MEMORY_FEATURES=true

# Test private/incognito mode
TEST_PRIVACY_MODE=true

# ==============================================================================
# Storage & Logging
# ==============================================================================

# Directory for results (JSON files)
RESULTS_DIR=results

# Directory for HTML reports
REPORTS_DIR=reports

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file location
LOG_FILE=results/red_team.log

# ==============================================================================
# Safety & Ethics
# ==============================================================================

# These settings are reminders about responsible use

# Only test systems you have permission to test: YES
AUTHORIZED_TESTING=true

# Using a burner/test account (not production): YES
USING_TEST_ACCOUNT=true

# Will report findings responsibly: YES
RESPONSIBLE_DISCLOSURE=true

# ==============================================================================
# Advanced Options
# ==============================================================================

# Playwright browser to use if Atlas not available (chromium, firefox, webkit)
FALLBACK_BROWSER=chromium

# Enable experimental features
ENABLE_EXPERIMENTAL=false

# Maximum test page load time (seconds)
PAGE_LOAD_TIMEOUT=30

# Wait time between tests (seconds) - helps avoid detection
DELAY_BETWEEN_TESTS=2

# ==============================================================================
# Notes
# ==============================================================================

# - Never commit the .env file with real API keys!
# - Use test accounts only, never production credentials
# - Results may contain successful exploits - store securely
# - Atlas is currently macOS only (as of 2024)
# - Some features require specific Atlas permissions/settings
# - Always follow responsible disclosure for any findings

